<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.co.android.tictactoe.PlayerActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/single_player"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/single_player"
            android:background="@drawable/button_background"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/multi_player"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/multi_player"
            android:background="@drawable/button_background"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_group_black_24dp"
            android:drawableLeft="@drawable/ic_group_black_24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        </LinearLayout>
    </RelativeLayout>

