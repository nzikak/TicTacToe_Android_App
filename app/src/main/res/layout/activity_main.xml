            android:textSize="32sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:rotation="180"
            style="@style/myStyle" />

        <TextView
            android:id="@+id/grid5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
