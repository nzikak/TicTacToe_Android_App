<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.co.android.tictactoe.StartActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/new_game"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_play_arrow_black_24dp"
        android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
        android:layout_marginBottom="5dp"
        />


    <Button
        android:id="@+id/options"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Options"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_settings_black_24dp"
        android:drawableLeft="@drawable/ic_settings_black_24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:id="@+id/stats"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_assessment_black_24dp"
        android:drawableLeft="@drawable/ic_assessment_black_24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

        <Button
            android:id="@+id/credits"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Credits"
            android:background="@drawable/button_background"
            android:padding="5dp"
            android:drawableStart="@drawable/ic_play_circle_outline_black_24dp"
            android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

    <Button
        android:id="@+id/exit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:background="@drawable/button_background"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_power_settings_new_black_24dp"
        android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />
    </LinearLayout>

</RelativeLayout>
