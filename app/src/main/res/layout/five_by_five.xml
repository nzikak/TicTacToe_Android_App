<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woody">

    <RelativeLayout
        android:id="@+id/grid5_scoreContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66ffffff">

        <TextView
            android:id="@+id/grid5_playerOneName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawableStart="@drawable/ic_person_black_24dp"
            android:background="@drawable/button_background"/>

        <TextView
            android:id="@+id/colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/colon"
            android:textSize="32sp"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/grid5_playerOne_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textSize="32sp"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:layout_alignRight="@id/colon"
            android:layout_alignEnd="@id/colon"
            android:textAlignment="center"
            />



        <TextView
            android:id="@+id/grid5_playerTwo_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:textSize="32sp"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:layout_alignLeft="@id/colon"
            android:layout_alignStart="@id/colon"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/grid5_playerTwoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_person_black_24dp"
            android:drawableEnd="@drawable/ic_person_black_24dp"
            android:background="@drawable/button_background"/>

    </RelativeLayout>

    <LinearLayout
